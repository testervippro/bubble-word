{
    "manifest_version": 3,
    "name": "Word Bubble",
    "version": "1.0",
    "description": "Shows a floating random word from an API.",
    "permissions": [
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}